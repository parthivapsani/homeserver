# =============================================================================
# HOME SERVER CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
PUID=1000
PGID=1000
TZ=America/Los_Angeles
HOSTNAME=homeserver

# -----------------------------------------------------------------------------
# Paths - Adjust these to match your mount points
# -----------------------------------------------------------------------------
# SSD Cache Drive (fast storage for apps/databases)
CACHE_PATH=/mnt/cache

# HDD Array (bulk storage for media)
STORAGE_PATH=/mnt/storage

# Docker appdata location
APPDATA_PATH=/mnt/cache/appdata

# Downloads location (on SSD for speed)
DOWNLOADS_PATH=/mnt/cache/downloads

# Media library location (on HDD array)
MEDIA_PATH=/mnt/storage/media

# Photos location (for Immich)
PHOTOS_PATH=/mnt/storage/photos

# Backup location (Time Machine, footage)
BACKUP_PATH=/mnt/storage/backups

# -----------------------------------------------------------------------------
# Mullvad VPN Configuration
# -----------------------------------------------------------------------------
# Get these from https://mullvad.net/en/account/wireguard-config
VPN_SERVICE_PROVIDER=mullvad
VPN_TYPE=wireguard
WIREGUARD_PRIVATE_KEY=your_wireguard_private_key_here
WIREGUARD_ADDRESSES=10.x.x.x/32
SERVER_COUNTRIES=USA

# -----------------------------------------------------------------------------
# Domain Configuration (for remote access)
# -----------------------------------------------------------------------------
DOMAIN=yourdomain.com
# Cloudflare API token (if using Cloudflare DNS challenge for SSL)
CF_API_TOKEN=your_cloudflare_api_token

# -----------------------------------------------------------------------------
# Database Passwords
# -----------------------------------------------------------------------------
# Immich
IMMICH_DB_PASSWORD=change_me_immich_db_password
IMMICH_REDIS_PASSWORD=change_me_immich_redis

# Firefly III
FIREFLY_DB_PASSWORD=change_me_firefly_db_password
FIREFLY_APP_KEY=change_me_32_char_random_string!!

# -----------------------------------------------------------------------------
# Service Ports
# -----------------------------------------------------------------------------
# Core
ADGUARD_PORT=3000
ADGUARD_DNS_PORT=53
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443

# Media
JELLYFIN_PORT=8096
SONARR_PORT=8989
RADARR_PORT=7878
LIDARR_PORT=8686
READARR_PORT=8787
PROWLARR_PORT=9696
QBITTORRENT_PORT=8080
SABNZBD_PORT=8081
AUDIOBOOKSHELF_PORT=13378

# Photos
IMMICH_PORT=2283

# Home Automation
HOMEASSISTANT_PORT=8123
OCTOPRINT_PORT=5000

# Utilities
VAULTWARDEN_PORT=8222
FIREFLY_PORT=8223

# Requests & Subtitles
JELLYSEERR_PORT=5055
BAZARR_PORT=6767

# Monitoring
UPTIME_KUMA_PORT=3001
HOMEPAGE_PORT=3002

# -----------------------------------------------------------------------------
# Optional: HDHomeRun (for live TV)
# -----------------------------------------------------------------------------
HDHR_IP=192.168.1.100

# -----------------------------------------------------------------------------
# Optional: Vaultwarden Admin Token
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 48
VAULTWARDEN_ADMIN_TOKEN=
